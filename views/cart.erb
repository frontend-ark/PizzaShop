<h2>Your cart: </h2>

<table class="table table-striped">
  <thead>
    <tr>
      <th>Name</th>
      <th>Prise</th>
      <th>Qty</th>
    </tr>
  </thead>
  <tbody>
    <% total_prise = 0 %>
    <% total_qty = 0 %>
    <% @items.each do |item| %>
      <tr>
        <td><%= item[0].title %></td>
        <td><%= item[0].prise %></td>
        <td><%= item[1] %></td>
      </tr>
      <% total_prise += item[0].prise * item[1].to_i %>
      <% total_qty += item[1].to_i %>
    <% end %>

    <tr>
        <td><b>Total:</b></td>
        <td><%= total_prise %></td>
        <td><%= total_qty %></td>
    </tr>

  </tbody>
</table>